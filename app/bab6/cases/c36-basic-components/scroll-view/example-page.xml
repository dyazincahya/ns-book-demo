<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <ActionBar>
    <GridLayout columns="50, *">
        <Label class="action-bar-title" text="{{ pageTitle }}" colSpan="2"/>
        <Label class="fas" text="&#xf053;" tap="onBackTap"/>
    </GridLayout>
  </ActionBar>

  <GridLayout rows="*, auto" class="p-3">
    <StackLayout row="0">
      <ScrollView scroll="scroll">
        <StackLayout padding="12">
          <Label text="v1" class="h1" height="150" />
          <Label text="v2" class="h1" height="150" />
          <Label text="v3" class="h1" height="150" />
          <Label text="v4" class="h1" height="150" />
          <Label text="v5" class="h1" height="150" />
          <Label text="v6" class="h1" height="150" />
          <Label text="v7" class="h1" height="150" />
          <Label text="v8" class="h1" height="150" />
          <Label text="v9" class="h1" height="150" />
          <Label text="v10" class="h1" height="150" />
          <Label text="v11" class="h1" height="150" />
          <Label text="v12" class="h1" height="150" />
          <Label text="v13" class="h1" height="150" />
          <Label text="v14" class="h1" height="150" />
          <Label text="v15" class="h1" height="150" />
          <Label text="v16" class="h1" height="150" />
          <Label text="v17" class="h1" height="150" />
        </StackLayout>
      </ScrollView>

    </StackLayout>
    <StackLayout row="1" class="p-2" background="#000" borderRadius="10">
      <Label class="h3" text="CONSOLE" textAlignment="center" textWrap="true" fontWeight="bold" color="#FFF" />
      <Label class="h4" text="{{ consoleText }}" textWrap="true" textAlignment="center" color="#FFF" />
    </StackLayout>
  </GridLayout>

</Page>
