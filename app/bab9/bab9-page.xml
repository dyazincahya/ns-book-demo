<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <ActionBar>
      <NavigationButton visibility="hidden"></NavigationButton>
      <GridLayout columns="50, *">
          <Label class="action-bar-title" text="Demo BAB IX" colSpan="2"/>
          <Label class="fas" text="&#xf0c9;" tap="onDrawerButtonTap"/>
      </GridLayout>
  </ActionBar>

  <ScrollView>  
    <StackLayout class="p-3">
      <Label 
        text="Google AdMob Sample"
        horizontalAlignment="center"
        class="h2 mb-3" />

      <Button text="Banner Ad" class="btn-success" tap="openModule" moduleName="bab9/cases/banner-ad/example-page" />

      <Button text="Interstisial Ad" class="btn-success" tap="openModule" moduleName="bab9/cases/interstisial-ad/example-page" />

      <Button text="Native Ad" class="btn-success" tap="openModule" moduleName="bab9/cases/native-ad/example-page" />

      <Button text="Rewarded Ad" class="btn-success" tap="openModule" moduleName="bab9/cases/rewarded-ad/example-page" />
    </StackLayout>
  </ScrollView>
</Page>
